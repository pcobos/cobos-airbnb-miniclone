<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="search-bar mr-1">
        <%= form_tag(flats_path, method: :get) do %>
          <%= label_tag(:search, "Search in flats") %>
          <%= text_field_tag(:search, params[:search]) %>
          <%= submit_tag ("Search"), class: "btn btn-info" %>
        <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "btn btn-outline-primary mr-1" %>
      </li>
      <li>
        <%= link_to 'Add a flat', new_flat_path, class: "btn btn-outline-primary mr-1" %>
      </li>
    </ul>
  </div>
</div>