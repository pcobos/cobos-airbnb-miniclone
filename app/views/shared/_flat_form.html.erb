<div class="flat-form">
    <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.input :image_url %>
    <%= f.submit "Submit", disable_with: 'Submiting...' %>
    <% end  %>
</div>